{
  "type": "minecraft-bedrock",
  "display": "PocketMine-MP",
  "icon": "minecraft-bedrock",
  "data": {
    "ip": {
      "type": "string",
      "value": "0.0.0.0",
      "display": "IP",
      "desc": "What IP to bind the server to",
      "required": true,
      "userEdit": false
    },
    "port": {
      "type": "integer",
      "value": 19132,
      "display": "Port",
      "desc": "What port to bind the server to",
      "required": true,
      "userEdit": false
    }
  },
  "install": [
    {
      "type": "download",
      "files": [
        "https://raw.githubusercontent.com/pmmp/get.pmmp.io/stable/installer.sh"
      ]
    },
    {
      "type": "command",
      "commands": [
        "chmod +x ./installer.sh",
        "./installer.sh -r"
      ]
    },
    {
      "type": "writefile",
      "text": "server-ip=${ip}\nserver-port=${port}\n",
      "target": "server.properties"
    }
  ],
  "run": {
    "command": "./start.sh --no-wizard",
    "stop": "stop",
    "stdin": {
      "type": "stdin"
    },
    "autostart": false,
    "autorecover": false,
    "autorestart": false
  },
  "environment": {
    "type": "host"
  },
  "supportedEnvironments": [
    {
      "type": "host"
    },
    {
      "type": "docker",
      "image": "pufferpanel/ubuntu",
      "portBindings": [
        "${port}:${port}/tcp"
      ]
    }
  ],
  "requirements": {
    "os": "linux",
    "arch": "amd64",
    "binaries": [
      "curl"
    ]
  }
}
