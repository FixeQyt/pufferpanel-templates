{
  "type": "srcds",
  "display": "Garry's Mod",
  "icon": "gmod",
  "data": {
    "gamemode": {
      "type": "string",
      "value": "sandbox",
      "display": "Gamemode",
      "desc": "Gamemode to load",
      "required": true,
      "userEdit": true
    },
    "mapname": {
      "type": "string",
      "value": "gm_construct",
      "display": "Map",
      "desc": "Map to load by default",
      "required": true,
      "userEdit": true
    },
    "maxplayers": {
      "type": "integer",
      "value": 20,
      "display": "Max Players",
      "desc": "Max players allowed on server",
      "required": true,
      "userEdit": false
    },
    "port": {
      "type": "integer",
      "value": 27015,
      "display": "Port",
      "desc": "What port to bind the server to",
      "required": true,
      "userEdit": false
    },
    "steamaccounttoken": {
      "type": "string",
      "value": "",
      "display": "Steam Game Server Account Token",
      "desc": "Token for a game server account. *optional* (Get one here: https://steamcommunity.com/dev/managegameservers)",
      "required": false,
      "userEdit": true
    },
    "wscollection": {
      "type": "string",
      "value": "",
      "display": "Workshop Collection ID",
      "desc": "Specify a ws collection the server should load. *optional*",
      "required": false,
      "userEdit": true
    }
  },
  "install": [
    {
      "if": "env == 'host'",
      "type": "steamgamedl",
      "appId": "4020"
    },
    {
      "if": "env == 'docker'",
      "type": "command",
      "commands": [
        "steamcmd +force_install_dir /pufferpanel +login anonymous +app_update 4020 +quit"
      ]
    },
    {
      "type": "command",
      "commands": [
        "chmod +x srcds_run"
      ]
    }
  ],
  "run": {
    "command": "./srcds_run +port ${port} -game garrysmod -console +gamemode ${gamemode} +map ${mapname} +maxplayers ${maxplayers} +host_workshop_collection ${wscollection} +sv_setsteamaccount ${steamaccounttoken} -norestart",
    "stop": "exit",
    "stdin": {
      "type": "stdin"
    },
    "autostart": false,
    "autorecover": false,
    "autorestart": false
  },
  "environment": {
    "type": "host"
  },
  "supportedEnvironments": [
    {
      "type": "host"
    },
    {
      "type": "docker",
      "image": "steamcmd/steamcmd",
      "portBindings": [
        "0.0.0.0:${port}:${port}/tcp"
      ]
    }
  ],
  "requirements": {
    "os": "linux",
    "arch": "amd64"
  }
}
